@model MyFace.DataAccess.User

@section Styles {
    <link href="@Url.Content("~/Content/signup.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewBag.Title = "Sign Up :: My🙂Face";
}


@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="limited-width-container">
    <h1>Sign Up to My🙂Face</h1>
    <div class="form-horizontal">
        <div class="form-row">
            @Html.LabelFor(model => model.firstname)
            @Html.EditorFor(model => model.firstname)
        </div>
        <div class="form-row">
            @Html.LabelFor(model => model.surname)
            @Html.EditorFor(model => model.surname)
        </div>
        <div class="form-row">
            @Html.LabelFor(model => model.dob)
            @Html.EditorFor(model => model.dob)
        </div>
        <div class="form-row">
            @Html.LabelFor(model => model.username)
            @Html.EditorFor(model => model.username)
        </div>
        <div class="form-row">
            @Html.LabelFor(model => model.password)
            @Html.EditorFor(model => model.password)
        </div>
        <div class="form-row">
            @Html.LabelFor(model => model.email)
            @Html.EditorFor(model => model.email)
        </div>
        <input type="submit" value="Sign up!" class="btn btn-default" />
    </div>
</div>
}
